{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["app/*"]
    }
  },
  "include": ["app/**/*", "prisma/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}